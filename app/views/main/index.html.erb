<div class="jumbotron">
<h1>Main#index</h1>
<p>Find me in app/views/main/index.html.erb</p>
</div>

<% @blogitems.each do |item| %>
<div class="panel panel-default">
  <div class="panel-heading">
    <h3 class="panel-title">
    	<%= item.name %>
    	<div style="float: right;">
	    	<%= link_to "Edit", edit_blog_item_path(item) %>
	    	<%= link_to "Delete", item, method: :delete, data: { confirm: 'Are you sure?' } %>
    	</div>
    </h3>
  </div>
  <div class="panel-body">
    <%= item.content %>
  </div>
</div>   
<% end %>

<br>
<%= link_to "Manage Blog", blog_items_path, class: 'btn btn-default btn-primary' %>
<br>

